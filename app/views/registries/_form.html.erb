<%= form_with(model: registry, local: true) do |form| %>
  <% if registry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(registry.errors.count, "error") %> prohibited this registry from being saved:</h2>

      <ul>
      <% registry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select :state, %w{open closed}, :prompt => 'Select', required: true, placeholder: 'closed', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :coordinator_ids, 'coordinators' %>
    <%= form.collection_select :coordinators_ids, @coordinators, :id, :name, {}, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
